<!-- admin/customers.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Customers</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Custom CSS for table styling */
        .table {
            width: 100%;
            margin-bottom: 1rem;
            color: #212529;
            border-collapse: collapse;
        }

        .table th,
        .table td {
            padding: 0.75rem;
            vertical-align: top;
            border-top: 1px solid #dee2e6;
        }

        .table thead th {
            vertical-align: bottom;
            border-bottom: 2px solid #dee2e6;
        }

        .table tbody+tbody {
            border-top: 2px solid #dee2e6;
        }

        .table .table {
            background-color: #fff;
        }
    </style>
</head>

<body>
   <!-- pages/customers.ejs -->
<h1>Customers</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Customer ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Address</th>
            <th>Latest Orders</th>
        </tr>
    </thead>
    <tbody>
        <% Object.keys(customers).forEach(customerId => { %>
            <tr>
                <% const customer = customers[customerId][0]; %>
                <td><%= customer.CustomerID %></td>
                <td><%= customer.FirstName %> <%= customer.LastName %></td>
                <td><%= customer.Email %></td>
                <td><%= customer.PhoneNumber %></td>
                <td><%= customer.AddressLine1 %>, <%= customer.District %>, <%= customer.SubDistrict %>, <%= customer.Province %> <%= customer.PostalCode %></td>
                <td>
                    <ul class="list-unstyled">
                        <% customers[customerId].forEach(order => { %>
                            <li>
                                Product: <%= order.details %><br>
                                Price: <%= order.price %><br>
                                Quantity: <%= order.quantity %><br>
                                Picture: <img src="<%= order.picture %>" style="max-width: 100px; max-height: 100px;"><br>
                                Order Date: <%= order.order_date %>
                            </li>
                        <% }); %>
                    </ul>
                </td>
            </tr>
        <% }); %>
    </tbody>
</table>

    <!-- Bootstrap JS (optional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>