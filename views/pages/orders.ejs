<!-- orders.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Orders</title>
    <!-- Include Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.4.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }

        .container {
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1 {
            color: #333;
        }

        /* Custom CSS for the table */
        .table {
            font-size: 0.9rem;
            /* Adjust the font size */
        }

        .table th,
        .table td {
            padding: 0.75rem;
            /* Padding inside table cells */
            vertical-align: top;
            /* Align text to the top of cells */
        }

        .table thead th {
            vertical-align: middle;
            /* Align header text to the middle */
        }

        .table-striped tbody tr:nth-of-type(odd) {
            background-color: rgba(0, 0, 0, 0.05);
            /* Light background color for odd rows */
        }

        .table-hover tbody tr:hover {
            background-color: rgba(0, 0, 0, 0.075);
            /* Slightly darker background color on hover */
        }

        .table-bordered {
            border: 1px solid rgba(0, 0, 0, 0.1);
            /* Light border around the table */
        }

        .table-bordered th,
        .table-bordered td {
            border: 1px solid rgba(0, 0, 0, 0.1);
            /* Border for table cells */
        }

        .table-dark {
            color: #fff;
            /* Text color for dark table headers */
            background-color: #212529;
            /* Background color for dark table headers */
        }

        .table-dark th,
        .table-dark td,
        .table-dark thead th {
            border-color: rgba(255, 255, 255, 0.1);
            /* Border color for dark tables */
        }

      
            .table-responsive {
                display: flex;
                justify-content: center;
            }

            .table {
                width: 100%;
                max-width: 1200px;
                /* กำหนดความกว้างสูงสุดของตาราง */
                margin: auto;/
            }

        
    </style>
</head>

<body>
    <div class="container mt-5 mx-auto">
        <% function formatDate(dateString) { const date=new Date(dateString); const options={ year: 'numeric' ,
            month: 'long' , day: 'numeric' , hour12: false }; return date.toLocaleDateString('th-TH', options); } %>

             <a href="/admin" class="btn btn-secondary">กลับไปที่หน้าadmin</a> <!-- Back button -->
            <h1 class="mb-4">ข้อมูลการสั่งซื้อสินค้า</h1>
            
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>เลขที่ใบสั่งซื้อ</th>
                            <th>วันที่สั่งซื้อ</th>
                            <th>สถานะการขนส่ง</th>
                            <th>สถานะการชำระเงิน</th>
                            <th>ดูรายละเอียดการสั่งซื้อ</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% orders.forEach(order=> { %>
                            <tr>
                                <td>
                                    <%= order.order_id %>
                                </td>
                                <td>
                                    <%= formatDate(order.order_date) %>
                                </td>
                                <td>
                                    <%= order.delivery_status %>
                                </td>
                                <td>
                                    <%= order.payment_status %>
                                </td>
                                <td>
                                    <a href="/admin/order-details/<%= order.order_id %>" class="btn btn-primary">ดูรายละเอียดการสั่งซื้อ</a>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>
    </div>



    <!-- Include Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.4.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>